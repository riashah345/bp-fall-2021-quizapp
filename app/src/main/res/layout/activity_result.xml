<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ResultActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical" android:background="#E3C3EC">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Congrats (Username)!"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_marginTop="50sp"/>
        "


        <TextView
                android:id="@+id/resultLabeled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RESULTS"
                android:textSize="50sp"
                android:textStyle="bold"
                android:layout_marginTop="100dp"/>


        <TextView
                android:id="@+id/totalScoreLabeled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Score : 3/5"
                android:textSize="30sp"
                android:layout_marginTop="10dp"/>

        <Button
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:text="Return"
                android:textSize="20sp"
                android:layout_marginTop="150dp"
                android:onClick="restart" android:shadowColor="#F4ECEC"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>